<div class='basic-grey'>
  <p>
  <script>
    $.notify("<%= notice %>","success")
  </script>
  </p>
  
  <h1><%= "#{t("messages.listing")} #{@contacts.model.model_name.human(count: @contacts.count )}" %></h1>
  
  <table>
    <thead>
      <tr>
        <th><%= @contacts.model.human_attribute_name("name") %></th>
        <th><%= @contacts.model.human_attribute_name("kind") %></th>
        <th colspan="2"></th>
      </tr>
    </thead>
  
    <tbody>
      <% @contacts.each do |contact| %>
        <tr style="background: <%= cycle('#F7F7F7', '#FFF')%>">
          <td><%= contact.name %></td>
          <td><%= contact.kind.description %></td>
          <td><%= link_to t("buttons.edit"), edit_contact_path(contact), class: 'btn btn-default btn-xs' %></td>
          <td><%= link_to t("buttons.destroy"), contact, method: :delete, data: { confirm: t("messages.confirm") }, class: 'btn btn-default btn-xs' %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  
  <br>
  
  <%= paginate @contacts %>
  
  <br>
  <br>
  <%= link_to t("buttons.new"), new_contact_path, class: "btn btn-primary" %>
  <%= link_to t("buttons.back"), root_path, class: "btn btn btn-success" %>
</div>