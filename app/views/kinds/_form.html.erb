<%= form_for(@kind, html:{class: "basic-grey"}) do |f| %>
  <% if @kind.errors.any? %>
    <div id="error_explanation">
        <h2><%= "#{pluralize(@kind.errors.count, 'erros')} #{t('messages.errors')}:" %></h2>

      <ul>
      <% @kind.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
  <h1> <%= @kind.model_name.human  %> </h1>

  <div class="field">
    <%= f.label :description %>
    <%= f.text_field :description %>
  </div>
  <div class="actions">
    <%= f.submit t("buttons.send"), class: "btn btn-primary" %>
    <%= link_to t("buttons.back"), kinds_path, class: "btn btn-success" %>
  </div>
<% end %>
